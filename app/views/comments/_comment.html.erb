
<li class="list-group-item">
    <font size="4">
    <%= comment.content %> 
    </font>
    <font size="1">
        <p>
        <%= time_ago_in_words(comment.created_at) %> ago
        </p>
    </font>
    
   
    <% if user_signed_in? %>
        <% if current_user.id == 1 %>
            <%= link_to "Edit", edit_question_comment_path(comment.question, comment) %>
            <%= link_to "Delete", question_comment_path(comment.question, comment), method: :delete, data: {confirm: "Are you sure?"} %>
        <% end %>
    <% end %>
</li>